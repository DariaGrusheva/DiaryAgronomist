@model Fuel

@{
    ViewData["Title"] = "Топливо";
}

<form asp-action="createOrEditFuel" asp-controller="reference">
    @Html.HiddenFor(model => model.FuelId)
    <p>
        <label asp-for="FuelName" class="form-label">Название топлива:</label><br />
        <input type="text" asp-for="FuelName" class="form-control" />
    </p>
    <p>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
        <input type="submit" value="Внести данные" class="btn btn-secondary" />
    </p>
</form>